@model IEnumerable<IdentityTemplate.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel-heading">User Accounts</div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Company</th>
        </tr>
        
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">No User Accounts</td>
            </tr>
        }
        else
        {
            foreach (var applicationUser in Model)
            {
                <tr>
                    <td>@applicationUser.Id</td>
                    <td>@applicationUser.UserName</td>
                    <td>@applicationUser.Email</td>
                    <td>@applicationUser.Company</td>
                </tr>
            }
        }
    </table>
</div>
